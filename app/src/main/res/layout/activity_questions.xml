<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".QuestionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:textSize="24sp"
            tools:text="Which country does Haaland play for ?"
            android:textColor="@color/darker"/>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_for_question"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            tools:text="image for question"
            tools:src="@drawable/haaland"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            >

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="0dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressBackgroundTint="@color/darker"
                android:progressTint="@color/darkest"
                android:indeterminate="false"
                android:layout_height="wrap_content"
                android:max="10"
                android:layout_weight="1"
                android:minHeight="50dp"
                android:progress="0"/>
            
            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkest"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:paddingStart="16dp"
                tools:text="0/10"
                android:textSize="16sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:textColor="@color/darkest"
            android:gravity="center"
            android:padding="16dp"
            tools:text="Option 1"
            android:background="@drawable/rectangle"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/tvOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:textColor="@color/darkest"
            android:gravity="center"
            android:padding="16dp"
            tools:text="Option 1"
            android:background="@drawable/rectangle"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/tvOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:textColor="@color/darkest"
            android:gravity="center"
            android:padding="16dp"
            tools:text="Option 1"
            android:background="@drawable/rectangle"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/tvOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:textColor="@color/darkest"
            android:gravity="center"
            android:padding="16dp"
            tools:text="Option 1"
            android:background="@drawable/rectangle"
            android:layout_marginTop="16dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S U B M I T"
            android:padding="16dp"
            android:textColor="@color/lighter"
            app:cornerRadius="8dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/darkest"
            />

    </LinearLayout>

</ScrollView>